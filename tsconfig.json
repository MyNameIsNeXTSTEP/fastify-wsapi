{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noEmit": false,
    "outDir": "./dist",
    "lib": [
      "ES2022"
    ],
    "composite": true,
    "skipLibCheck": true,
    "allowJs": true,
    "incremental": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "./src/**/*",
    "config.js",
    "index.js",
    "global.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
}